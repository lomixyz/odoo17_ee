<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="qr_invoice_internal_layout">
            <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-out="0"/>
            </div>
        </template>

        <template id="report_invoice_zakat_tax_authority_document">
            <t t-call="zakat_report_invoice.qr_invoice_internal_layout" style="margin-top:0px;padding-top:0px;display:inline;">
                <div class="page" style="margin-top:0px;padding-top:0px;">
                    <center>
                        <t t-if="o.move_type == 'out_refund'">
                            <h4>مرتجع فاتورة ضربية</h4>
                            <h4>Credit Tax Invoice</h4>
                        </t>
                        <t t-else="">
                            <h4>فـاتـورة ضـريبية</h4>
                            <h4>Tax Invoice</h4>
                        </t>
                    </center>
 
                    <table width="100%" class="table table-bordered" style="font-size:12px;">
                        <tr>
                            <th width="15%" class="text-left">Type</th>
                            <td width="20%" class="text-left">
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                                <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                            </td>
                            <td width="20%" class="text-right">
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">فـاتورة</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">فاتورة مبدئية</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">فاتورة ملغية</span>
                                <span t-if="o.move_type == 'out_refund'">مرتجع فاتورة ضربية</span>
                                <span t-if="o.move_type == 'in_refund'">إشعار خصم مورد</span>
                                <span t-if="o.move_type == 'in_invoice'">فاتورة مورد</span>
                            </td>
                            <th width="15%" class="text-right">النوع</th>
                            <td width="20%" rowspan="6">
                                <t t-if="o.state == 'posted'">
                                    <!-- <span t-field="o.qr_image" t-options='{"widget": "image"}' /> -->

                                    <div class="row">
                                        <div style="width:150px;height:150px;" class="col-4">
                                            <!-- <img t-if="o.l10n_sa_qr_code_str" style="display:block;margin:10% auto 0 auto;" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 150, 150)"/> -->
                                            <img t-if="o.l10n_sa_qr_code_str" style="display:block;" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', quote_plus(o.l10n_sa_qr_code_str), 180, 180)"/>
                                        </div>
                                    </div>


                                </t>
                                <t t-else="">
                                    <span>Qr will be generated after invoice confirmed</span>
                                </t>

                            </td>
                        </tr>
                        <tr>
                            <th width="15%" class="text-left">Number</th>
                            <td width="40%" colspan="2" class="text-center">
                                <span t-field="o.name"/>
                            </td>
                            <th width="15%" class="text-right">رقم الفاتورة</th>
                        </tr>
                        <tr>
                            <th width="15%" class="text-left">Issue Date</th>
                            <td width="40%" colspan="2" class="text-center">
                                <span t-field="o.invoice_date"/>
                            </td>
                            <th width="15%" class="text-right">تاريخ الإصدار </th>
                        </tr>
                        <tr>
                            <th width="15%" class="text-left">Confirm Date</th>
                            <td width="40%" colspan="2" class="text-center">
                                <span t-field="o.invoice_date"/>
                                <!-- <span t-field="o.datetime_invoice"/> -->
                            </td>
                            <th width="15%" class="text-right"> تاريخ الاعتماد </th>
                        </tr>
                        <tr>
                            <th width="15%" class="text-left">Due Date</th>
                            <td width="40%" colspan="2" class="text-center">
                                <span t-field="o.invoice_date_due"/>
                            </td>
                            <th width="15%" class="text-right">تاريخ الإستحقاق</th>
                        </tr>
                        <tr>
                            <th width="15%" class="text-left">Salesperson</th>
                            <td width="40%" colspan="2" class="text-center">
                                <span t-field="o.invoice_user_id.name" />
                                <br/>
                                <span t-field="o.invoice_user_id.partner_id.phone" />
                                <br/>
                                <span t-field="o.invoice_user_id.partner_id.mobile" />
                            </td>
                            <th width="15%" class="text-right">البائع</th>
                        </tr>


                    </table>


                    <table width="100%" class="table table-sm table-bordered" style="font-size:12px;">
                        <tr style="background-color:gray;color:white;">
                            <th width="20%" class="text-left">Type</th>
                            <td width="30%" class="text-center">
                                <span t-if="o.move_type in ['out_invoice','out_refund']">Customer</span>
                                <span t-if="o.move_type in ['in_invoice','in_refund']">Vendor</span>
                            </td>
                            <td width="30%" class="text-center">
                                <span t-if="o.move_type in ['out_invoice','out_refund']">عـمـيل</span>
                                <span t-if="o.move_type in ['in_invoice','in_refund']">مـورد</span>
                            </td>
                            <th width="20%" class="text-right">النوع</th>
                        </tr>
                        <tr>
                            <th width="20%" class="text-left">Name</th>
                            <td width="60%" colspan="2" class="text-center" style="font-size:15px;">
                                <span t-field="o.partner_id.name"/>
                            </td>
                            <th width="20%" class="text-right">الإسم</th>
                        </tr>
                        <tr>
                            <th width="20%" class="text-left">Phone</th>
                            <td width="60%" colspan="2" class="text-center">
                                <span t-field="o.partner_id.phone"/>
                            </td>
                            <th width="20%" class="text-right">رقم الجوال</th>
                        </tr>

                        <tr>
                            <th width="20%" class="text-left">VAT Number</th>
                            <td width="60%" colspan="2" class="text-center">
                                <span t-field="o.partner_id.vat"/>
                            </td>
                            <th width="20%" class="text-right">رقم تسجيل ضريبة القيمة المضافة</th>
                        </tr>

                    </table>

                    <table class="table table-sm table-bordered" style="font-size:10px; direction: rtl;" name="invoice_line_table">
                        <thead>
                            <tr style="background-color:#464343;color:white;">
                                <th class="text-right">
                                    <div>السلع او الخدمات</div>
                                    <div>Description</div>
                                </th>
                                <th class="text-left">
                                    <div>الكمية</div>
                                    <div>Quantity</div>
                                </th>
                                <th t-attf-class="text-left">
                                    <div>سعر الوحدة</div>
                                    <div>Unit Price</div>
                                </th>
                                <th t-attf-class="text-left">
                                    <div>خصومات</div>
                                    <div>Discount</div>
                                </th>
                                <th class="text-left">
                                    <div>المبلغ الخاضع للضريبة</div>
                                    <div>Taxable Amount</div>
                                </th>
                                <th t-attf-class="text-right">
                                    <div>الضريبة</div>
                                    <div>Tax</div>
                                </th>
                                <th class="text-left">
                                    <div>مبلغ الضريبة</div>
                                    <div>Tax Amount</div>
                                </th>
                                <th class="text-left">
                                    <div>المجموع شامل الضريبة</div>
                                    <div>Total (Including VAT)</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr>
                                    <t name="account_invoice_line_accountable">
                                        <td>
                                            <span t-field="line.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line.quantity"/>
                                            <!-- span t-field="line.uom_id" groups="uom.group_uom"/ -->
                                        </td>
                                        <td t-attf-class="text-left">
                                            <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td t-attf-class="text-left">
                                            <span t-field="line.discount"/>
                                            <!-- <span t-field="line.discount_amount"/> -->
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line.price_subtotal"/>
                                        </td>
                                        <td t-attf-class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line.l10n_gcc_invoice_tax_amount"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="line.price_total"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>



                    <table width="100%" class="table table-sm table-bordered" style="font-size:12px;">
                        <tr style="background-color:gray;color:white;">
                            <th width="30%" class="text-left">Total Amounts</th>
                            <th width="40%" class="text-left"></th>
                            <th width="30%" class="text-right">إجمالي المبالغ</th>
                        </tr>
                        <tr>
                            <th width="30%" class="text-left">Total (Excluding VAT)</th>
                            <td width="40%" class="text-right">
                                <span t-field="o.amount_untaxed"/>
                            </td>
                            <th width="30%" class="text-right"> (الإجمالي (غير شامل الضريبة </th>
                        </tr>
                        <!-- <tr t-if="o.total_discount">
                            <th width="30%" class="text-left">Discount</th>
                            <td width="40%" class="text-right">
                                <span t-field="o.total_discount"/>
                            </td>
                            <th width="30%" class="text-right">مجموع الخصومات</th>
                        </tr> -->
                        <tr>
                            <th width="30%" class="text-left">Total VAT</th>
                            <td width="40%" class="text-right">
                                <span t-field="o.amount_tax"/>
                            </td>
                            <th width="30%" class="text-right">مجموع الضريبة</th>
                        </tr>
                        <tr>
                            <th width="30%" class="text-left">Total(Including VAT)</th>
                            <td width="40%" class="text-right">
                                <span t-field="o.amount_total"/>
                            </td>
                            <th width="30%" class="text-right"> (المجموع (شامل الضريبة </th>
                        </tr>
                        <tr>
                            <th width="30%" class="text-left">Amount Residual</th>
                            <td width="40%" class="text-right">
                                <span t-field="o.amount_residual"/>
                            </td>
                            <th width="30%" class="text-right">المبلغ المتبقي</th>
                        </tr>


                    </table>

                    <p t-if="o.narration">
                        <strong>Comment:</strong>
                        <span t-field="o.narration"/>
                    </p>
                    <p t-if="o.invoice_payment_term_id">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note">
                        <strong>Fiscal Position Remark:</strong>
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>

                    <!-- <b>Payment Status : </b>
                    <span t-field="o.state"/> -->
                    <t t-if="o.invoice_payments_widget">
                        <table width="100%" class="table table-sm table-bordered" style="font-size:12px;">
                            <thead>
                                <tr style="background-color:#464343;color:white;">
                                    <th colspan="2">Payment Informaion</th>
                                    <th colspan="2" class="text-right">معلومات السداد</th>
                                </tr>
                                <tr style="background-color:gray;color:white;">
                                    <th>
                                        <div>Number</div>
                                        <div>الرقم</div>
                                    </th>
                                    <!-- <th><div>Ref</div><div>المرجع</div></th> -->
                                    <th>
                                        <div>Date</div>
                                        <div>التاريخ</div>
                                    </th>
                                    <th>
                                        <div>Method</div>
                                        <div>الطريقة</div>
                                    </th>
                                    <th class="text-right">
                                        <div>Amount</div>
                                        <div>المبلغ</div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="payment_ids" t-value="get_paid_id(o)"/>
                                <tr t-foreach="payment_ids" t-as="p">
                                    <td>
                                        <span t-esc="p.get('name')"/>
                                    </td>
                                    <!-- <td>
                                        <span t-esc="p.get('ref')"/>
                                    </td> -->
                                    <td>
                                        <span t-esc="p.get('date')"/>
                                    </td>
                                    <td>
                                        <span t-esc="p.get('journal_name')"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="p.get('amount')" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>


                </div>
            </t>
        </template>


        <template id="report_invoice_zakat_tax_authority">
            <t t-call="web.html_container" style="margin-bottom:0px;padding-bottom:0px;">

                <!--t t-set="data_report_margin_top" t-value="12"/>
                <t t-set="data_report_header_spacing" t-value="9"/>
                <t t-set="data_report_dpi" t-value="110"/-->
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="'en_US'"/>
                    <t t-set="o" t-value="o.with_context(lang=lang)" />
                    <t t-if="user_lang == 'en_US'">
                        <div class="header" t-att-style="report_header_style" style="direction: ltr">
                            <div class="o_boxed_header" style="direction: ltr;margin-top:10px;padding-top:10px;">
                                <table width="100%">
                                    <tr>
                                        <td width="40%">
                                            <div name="company_address" style="vertical-align:top;">
                                                <span class="company_address" t-field="o.company_id.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                                                <span t-if="o.company_id.vat" class="mt16">
                                                    <t t-esc="'Tax ID'"/>
:                                                    <span t-field="o.company_id.vat"/>
                                                </span>
                                            </div>
                                        </td>

                                        <td width="20%" style="vertical-align:top;">
                                            <span t-field="o.company_id.logo" t-options='{"widget": "image"}' />
                                        </td>

                                        <td width="40%" style="vertical-align:top;">
                                            <t t-set="ar_o" t-value="o.with_context(lang='ar_AA')" />
                                            <div name="company_address" class="text-right">
                                                <span class="company_address" t-field="ar_o.company_id.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                                                <span t-if="o.company_id.vat" class="mt16">
                                                    <t t-esc="'الرقم الضريبي'"/>
:                                                    <span t-field="o.company_id.vat"/>
                                                </span>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="header" t-att-style="report_header_style" style="direction: rtl;">
                            <div class="o_boxed_header" style="margin-top:10px;padding-top:10px;">
                                <table width="100%">
                                    <tr>
                                        <td width="40%">
                                            <t t-set="ar_o" t-value="o.with_context(lang='ar_AA')" />
                                            <div name="company_address" style="vertical-align:top;">
                                                <span class="company_address" t-field="ar_o.company_id.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                                                <span t-if="o.company_id.vat" class="mt16">
                                                    <t t-esc="'الرقم الضريبي'"/>
:                                                    <span t-field="o.company_id.vat"/>
                                                </span>
                                            </div>
                                        </td>

                                        <td width="20%" style="vertical-align:top;">
                                            <span t-field="o.company_id.logo" t-options='{"widget": "image"}' />
                                        </td>
                                        <td width="40%" style="vertical-align:top;">
                                            <div name="company_address" style="text-align:left;">
                                                <span class="company_address" t-field="o.company_id.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                                                <span t-if="o.company_id.vat" class="mt16">
                                                    <t t-esc="'Tax ID'"/>
:                                                    <span t-field="o.company_id.vat"/>
                                                </span>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>

                    <t t-call="zakat_report_invoice.report_invoice_zakat_tax_authority_document" t-lang="lang"/>

                    <!-- Footer -->
                    <div class="footer o_background_footer">
                        <div class="text-center">
                            <ul class="list-inline">
                                <li t-if="o.company_id.phone" class="list-inline-item">
                                    <i class="fa fa-phone" role="img" aria-label="Phone" title="Phone"/>
                                    <span t-field="o.company_id.phone"/>
                                </li>
                                <li t-if="o.company_id.email" class="list-inline-item">
                                    <i class="fa fa-at" role="img" aria-label="Email" title="Email"/>
                                    <span t-field="o.company_id.email"/>
                                </li>
                                <li t-if="o.company_id.website" class="list-inline-item">
                                    <i class="fa fa-globe" role="img" aria-label="Website" title="Website"/>
                                    <span t-field="o.company_id.website"/>
                                </li>
                                <li t-if="o.company_id.vat" class="list-inline-item">
                                    <i class="fa fa-building-o" role="img" aria-label="Fiscal number"/>
                                    <t t-esc="(o.company_id.country_id.vat_label or 'Tax ID').replace(' ','\N{NO-BREAK SPACE}')"/>
                                    :                                    <span t-esc="o.company_id.vat.replace(' ','\N{NO-BREAK SPACE}')"/>
                                </li>
                            </ul>
                            <div t-field="o.company_id.report_footer"/>
                            <div t-if="report_type == 'pdf'" class="text-muted">
                                Page: <span class="page"/>
 of <span class="topage"/>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</data>
</odoo>
